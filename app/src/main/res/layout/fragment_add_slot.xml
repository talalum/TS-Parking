<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AddSlot">
    private boolean Disable;
    private boolean Indoor;
    private boolean Free;
    private int ParkingNum;

    <EditText
        android:id="@+id/DisableText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:gravity="center"
        android:hint="Disable (1 for true, 0 for false)"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/IndoorText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:gravity="center"
        android:hint="Indoor (1 for true, 0 for false)"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/ParkingNumText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.35"
        android:gravity="center"
        android:hint="Parking number - integer"
        android:textSize="25sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical">

        <Button
            android:id="@+id/SaveSlotButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_button"
            android:text="Add Slot"
            android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">


        <Button
            android:id="@+id/BackB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/border_button"
            android:text="@string/back" />
    </LinearLayout>

</LinearLayout>